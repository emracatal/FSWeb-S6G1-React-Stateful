const KareIdListesi = ['sqA', 'sqB', 'sqC', 'sqD'];



export default function Kareler() {
  // State hookunu 2 defa kullanÄ±n: 'kareler' ve
  // 'aktifKare' olmak Ã¼zere. Birisi kare idlerini _dizi_ olarak tutacak, diÄŸeri ise aktif olan
  // kareyi gÃ¶zlemleyecek. Sayfa yÃ¼klendiÄŸinde aktif kare olmayacak,
  // yani  'aktifKare' null olmalÄ±.
	
